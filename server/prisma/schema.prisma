// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model staff {
  id          Int     @id @default(autoincrement())
  staffid     String  @unique
  password    String
  staffname   String
  designation String
  photourl    String
  topic       topic[]
}

model topic {
  id          Int      @id @default(autoincrement())
  topicname   String
  syllabus    String
  department  String
  year        String
  semester    String
  subjectcode String
  topicdesc   String
  staff       staff    @relation(fields: [staffid], references: [id])
  staffid     Int
  asset       asset[]
}

model asset {
  id        Int    @id @default(autoincrement())
  assetname String
  assettype String
  asseturl  String
  topic     topic  @relation(fields: [topicid], references: [id])
  topicid   Int
}
